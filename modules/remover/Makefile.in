##############################################################################
# Paths
##############################################################################
srcdir = @srcdir@
datarootdir = @datarootdir@
moduledir = @moduledir@
# top level of test build directory
TESTBUILD = @top_builddir@/testbuild
TESTFILEPP = $(TESTBUILD)/bin/filepp
ECHO=@echo@
DIFF=@diff@
RM=@rm@
INSTALL=@INSTALL@

test:
	@$(ECHO) ----------- Testing c-remover.pm ----------
	$(TESTFILEPP) -m c-remover.pm $(srcdir)/test.in -o test-c.out
	$(DIFF) $(srcdir)/test-c.good test-c.out
	@$(ECHO) ----------- Done --------------------------
	@$(ECHO) ----------- Testing hash-remover.pm -------
	$(TESTFILEPP) -m hash-remover.pm $(srcdir)/test.in -o test-hash.out
	$(DIFF) $(srcdir)/test-hash.good test-hash.out
	@$(ECHO) ----------- Done --------------------------

install:
	$(INSTALL) -m 644 $(srcdir)/remover.pm $(moduledir)

clean:
	$(RM) 

distclean:
	$(RM) Makefile

